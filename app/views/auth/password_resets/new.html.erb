<h1>Forgot Password</h1>

<%= form_with url: auth_create_password_reset_path do |form| %>
<%= render 'components/form_errors', form: form %>
   <div class="form-group mb-3">
        <%= form.label :email, "Email" %>
        <%= form.text_field :email, class: "form-control", placeholder: "example@email.com" %> 
    </div>
    <div class="form-group">
        <%= form.submit "Send Password Reset Email", class: "btn btn-primary" %>
    </div>
<% end %>
