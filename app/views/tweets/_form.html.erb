<%= form_with model: tweet do |form| %>

<%= render 'components/form_errors', form: form %>

<div class="form-group col-md-4 mb-3" >
    <%= form.label :twitter_account_id %>
    <%= form.collection_select :twitter_account_id, Current.user.twitter_accounts, :id, :name, {}, {class: "form-control"} %>
</div>

<div class="form-group col-md-4 mb-3">
    <%= form.label :body %>
    <%= form.text_area :body, class: "form-control" %>
</div>

<div class="form-group col-md-4 mb-3">
    <%= form.label :publish_at %>
    <div class="form-control" >
        <%= form.datetime_select :publish_at %>
    </div>
</div>

<div class="form-group">
    <%= form.submit "Schedule", class: "btn btn-primary" %>
</div>

<% end %>